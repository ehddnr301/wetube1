extends layouts/main

block content
    .form__wrapper
        .form-container
            form(action=`/users${routes.changePassword}`, method="post")
                input(type="password", name="oldPassword",maxlength="25", placeholder="Current Password")
                input(type="password", name="newPassword",maxlength="25", placeholder="New Password")
                input(type="password", name="newPassword1",maxlength="25", placeholder="Verify New Password")
                input(type="submit", value="Change Password")