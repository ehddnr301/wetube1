extends layouts/main
include mixins/videoBlock

block content
    .user__wrapper
        .user-profile
            .user-profile__header
                img.u-avatar(src=userMe.avatarUrl)
                h4.profile__username=userMe.name
            if userMe.id === loggedUser.id
                .user-profile__btns
                    a(href=`/users${routes.editProfile}`)
                        button ‚úèÔ∏è Edit Profile
                    a(href=`/users${routes.changePassword}`)
                        button üîí Change Password
        .user-videos
            each item in userMe.videos 
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.fileUrl
                })